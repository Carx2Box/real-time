    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "run backend",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/01-server/dist/index.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },
          {
              "type": "chrome",
              "request": "launch",
              "name": "run web",
              "url": "http://localhost:4200",
              "webRoot": "${workspaceFolder}/02-basic"
          },
          {
              "type": "chrome",
              "request": "attach",
              "name": "Attach to Chrome",
              "port": 9222,
              "webRoot": "${workspaceFolder}/02-basic"
          }
    ]
}